# Etapa de build: usa Node.js y Yarn para compilar la aplicaci贸n React
FROM node:16-alpine as build

WORKDIR /app

# Copia el package.json y yarn.lock
COPY package.json yarn.lock ./

# Instala las dependencias usando Yarn
RUN yarn install --frozen-lockfile

# Copia el resto del c贸digo fuente y compila la aplicaci贸n
COPY . .
RUN yarn build

# Etapa final: usa Nginx para servir la aplicaci贸n compilada
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
